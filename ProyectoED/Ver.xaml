        <TextBlock Name="lTemporada" HorizontalAlignment="Left" Margin="403,134,0,0" TextWrapping="Wrap" Text="Temporada:" VerticalAlignment="Top"/>
        <TextBox Name="tbTemporadas" HorizontalAlignment="Left" Height="25" Margin="420,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="200,10,0,0" TextWrapping="Wrap" Text="Categoría:" VerticalAlignment="Top"/>
        <TextBlock Name="lCategoria" Text="Label" HorizontalAlignment="Left" Margin="258,11,0,0" VerticalAlignment="Top"/>
        <Image Name="star1" Visibility="Hidden" Margin="382,117,17,129" Source="star1.png" Stretch="Fill"/>
        <Image Name="star2" Visibility="Hidden" Margin="382,117,17,129" Source="star2.png" Stretch="Fill"/>
        <Image Name="star3" Visibility="Hidden" Margin="382,117,17,129" Source="star3.png" Stretch="Fill"/>
        <Image Name="star4" Visibility="Hidden" Margin="382,117,17,129" Source="star4.png" Stretch="Fill"/>
        <Image Name="star5" Visibility="Hidden" Margin="382,117,17,129" Source="star5.png" Stretch="Fill"/>

